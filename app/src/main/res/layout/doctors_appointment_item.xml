<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_width"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_marginTop="@dimen/large_top_margin"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/doctor_occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кардиолог"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="@dimen/heading_level2_top_margin"
            android:layout_marginStart="@dimen/heading_level2_start_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Четверг"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/small_top_margin"
            app:layout_constraintStart_toStartOf="@id/doctor_occupation"
            app:layout_constraintTop_toBottomOf="@id/doctor_occupation" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Иванов Иван Иванович"
            android:layout_marginBottom="@dimen/small_top_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/doctor_occupation" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/small_top_margin"
            app:layout_constraintStart_toStartOf="@id/doctor_occupation"
            app:layout_constraintTop_toBottomOf="@id/date" />

        <ImageView
            android:id="@+id/doctor_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:visibility="invisible"

            android:fontFamily="@font/montserrat_medium"
            android:src="@drawable/edit"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/small_top_margin"
            android:layout_marginEnd="@dimen/small_top_margin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>