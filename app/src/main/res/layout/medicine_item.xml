<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_width"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_marginTop="@dimen/large_top_margin"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="@dimen/heading_level2_top_margin"
            android:layout_marginStart="@dimen/heading_level2_start_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/freq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/small_top_margin"
            app:layout_constraintStart_toStartOf="@id/medicine_name"
            app:layout_constraintTop_toBottomOf="@id/medicine_name" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/small_top_margin"
            app:layout_constraintStart_toStartOf="@id/freq"
            app:layout_constraintTop_toBottomOf="@id/freq" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"

            android:fontFamily="@font/montserrat_medium"
            android:src="@drawable/edit"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/small_top_margin"
            android:layout_marginEnd="@dimen/small_top_margin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>